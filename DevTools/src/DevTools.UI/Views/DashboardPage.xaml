<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="DevTools.UI.Views.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DevTools.UI.Views"
	xmlns:cv="using:DevTools.UI.Converters"
    xmlns:model="using:DevTools.UI.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

	<Page.Resources>
		<cv:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
		<cv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
	    <cv:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
		<cv:EmptyCollectionToVisibilityConverter x:Key="EmptyCollectionToVisibilityConverter"/>
		<cv:PremiumButtonTextConverter x:Key="PremiumButtonTextConverter"/>
		<cv:PremiumCommandConverter x:Key="PremiumCommandConverter"/>
	</Page.Resources>
		
    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <Image Source="/Assets/logo.png" Width="40" Height="40" Margin="0,0,15,0"/>
                <TextBlock Text="IT Tools" Style="{StaticResource TitleTextBlockStyle}" VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <StackPanel x:Name="AnonymousUI" Orientation="Horizontal" Visibility="{x:Bind ViewModel.IsAuthenticated, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                    <Button x:Name="LoginButton" Content="Login" Margin="5,0" Click="LoginButton_Click"/>
                    <Button x:Name="RegisterButton" Content="Register" Margin="5,0" Click="RegisterButton_Click"/>
                </StackPanel>

                <StackPanel x:Name="UserUI" Orientation="Horizontal" Visibility="{x:Bind ViewModel.IsAuthenticated, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="{x:Bind ViewModel.CurrentUser.Name, Mode=OneWay}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <Button x:Name="FavoritesButton" 
                            ToolTipService.ToolTip="My Favorites" 
                            Margin="5,0" 
                            Click="FavoritesButton_Click">
                        <FontIcon Glyph="&#xE00B;"/>
                    </Button>
                    <Button x:Name="RequestPremiumButton" 
                        Content="Get Premium" 
                        Margin="5,0" 
                        Command="{x:Bind ViewModel.RequestPremiumCommand}"
                        Visibility="{x:Bind ViewModel.IsPremium, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>

                    <Button x:Name="RevokePremiumButton" 
                        Content="Revoke Premium" 
                        Margin="5,0" 
                        Command="{x:Bind ViewModel.RevokePremiumCommand}"
                        Visibility="{x:Bind ViewModel.IsPremium, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>

                    <Button x:Name="LogoutButton" 
                            Command="{x:Bind ViewModel.LogoutCommand}" 
                            Margin="5,0">
                        <FontIcon Glyph="&#xE7E8;"/>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="0" 
                     PlaceholderText="Search tools..." 
                     Text="{x:Bind ViewModel.SearchQuery, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,10,0"/>
            
            <Button Grid.Column="1" 
                    Content="Search" 
                    Command="{x:Bind ViewModel.SearchCommand}"/>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" 
                       Text="{x:Bind ViewModel.ErrorMessage, Mode=OneWay}" 
                       Foreground="Red" 
                       TextWrapping="Wrap" 
                       Visibility="{x:Bind ViewModel.ErrorMessage, Mode=OneWay, Converter={StaticResource StringToVisibilityConverter}}"/>

            <GridView Grid.Row="1" 
                      ItemsSource="{x:Bind ViewModel.Tools, Mode=OneWay}" 
                      SelectedItem="{x:Bind ViewModel.SelectedTool, Mode=TwoWay}"
                      SelectionMode="Single"
                      IsItemClickEnabled="True"
                      ItemClick="ToolsGridView_ItemClick">
                <GridView.ItemTemplate>
                    <DataTemplate x:DataType="model:Tool">
                        <Grid Width="300" Height="200" Margin="10" Padding="15" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" 
                                           Text="{x:Bind Name}" 
                                           Style="{StaticResource SubtitleTextBlockStyle}" 
                                           TextTrimming="CharacterEllipsis"/>
                                
                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <FontIcon Glyph="&#xEB29;" 
                                              Visibility="{x:Bind IsPremium, Converter={StaticResource BoolToVisibilityConverter}}" 
                                              Foreground="Gold"/>
                                </StackPanel>
                            </Grid>

                            <TextBlock Grid.Row="1" 
                                       Text="{x:Bind Description}" 
                                       Style="{StaticResource CaptionTextBlockStyle}" 
                                       Opacity="0.6" 
                                       Margin="0,5,0,0"/>

                            <TextBlock Grid.Row="2" 
                                       Text="{x:Bind Description}" 
                                       Style="{StaticResource BodyTextBlockStyle}" 
                                       TextWrapping="Wrap" 
                                       TextTrimming="CharacterEllipsis" 
                                       Margin="0,10,0,0"/>

                            <StackPanel Grid.Row="3" 
                                        Orientation="Horizontal" 
                                        HorizontalAlignment="Right" 
                                        VerticalAlignment="Bottom">
                                
                                <Button IsEnabled="{Binding DataContext.IsAuthenticated, ElementName=ToolsGridView, Converter={StaticResource BoolToVisibilityConverter}}" 
                                        Command="{Binding DataContext.AddToFavoritesCommand, ElementName=ToolsGridView}"
                                        CommandParameter="{x:Bind}"
                                        Visibility="{x:Bind IsFavorite, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                                        Margin="5,0">
                                    <FontIcon Glyph="&#xE006;"/>
                                </Button>

                                <Button IsEnabled="{Binding DataContext.IsAuthenticated, ElementName=ToolsGridView, Converter={StaticResource BoolToVisibilityConverter}}" 
                                        Command="{Binding DataContext.RemoveFromFavoritesCommand, ElementName=ToolsGridView}"
                                        CommandParameter="{x:Bind}"
                                        Visibility="{x:Bind IsFavorite, Converter={StaticResource BoolToVisibilityConverter}}"
                                        Margin="5,0">
                                    <FontIcon Glyph="&#xE00B;" Foreground="Gold"/>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </GridView.ItemTemplate>
                
                <GridView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsWrapGrid Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </GridView.ItemsPanel>
            </GridView>

            <ProgressRing Grid.Row="1" 
                          IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}" 
                          Width="50" 
                          Height="50" 
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Center"/>

            <TextBlock Grid.Row="1" 
                       Text="No tools found matching your search criteria." 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                       Visibility="{x:Bind ViewModel.Tools.Count, Mode=OneWay, Converter={StaticResource EmptyCollectionToVisibilityConverter}}"/>
        </Grid>
    </Grid>
</Page>