<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="DevTools.UI.Views.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DevTools.UI.Views"
    xmlns:models="using:DevTools.UI.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Available Tools" 
                   Style="{StaticResource SubtitleTextBlockStyle}"
                   Margin="0,0,0,20"/>

        <GridView Grid.Row="1" 
                  ItemsSource="{Binding Tools}"
                  SelectionMode="Single"
                  ItemClick="ToolItem_Click"
                  IsItemClickEnabled="True">
            <GridView.ItemTemplate>
                <DataTemplate x:DataType="models:Tool">
                    <Grid Width="200" Height="150" Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="{x:Bind Name}" 
                                   FontWeight="SemiBold" 
                                   FontSize="16"
                                   TextWrapping="Wrap"/>

                        <TextBlock Grid.Row="1"
                                   Text="{x:Bind Description}" 
                                   TextWrapping="Wrap"
                                   Opacity="0.7"
                                   Margin="0,5"/>

                        <StackPanel Grid.Row="2" 
                                    Orientation="Horizontal">
                            <FontIcon Glyph="&#xE1CF;" 
                                      Visibility="{x:Bind IsPremium}"
                                      Margin="0,0,5,0"/>
                            <TextBlock Text="Premium" 
                                       Visibility="{x:Bind IsPremium}"
                                       Foreground="Gold"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
    </Grid>
</Page>