<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="DevTools.UI.Views.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DevTools.UI.Views"
	xmlns:cv="using:DevTools.UI.Converters"
    xmlns:model="using:DevTools.UI.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

	<Page.Resources>
		<cv:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
		<cv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
	    <cv:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
		<cv:EmptyCollectionToVisibilityConverter x:Key="EmptyCollectionToVisibilityConverter"/>
		<cv:PremiumButtonTextConverter x:Key="PremiumButtonTextConverter"/>
		<cv:PremiumCommandConverter x:Key="PremiumCommandConverter"/>

        <SolidColorBrush x:Key="SidePanelBackgroundBrush" Color="{ThemeResource SystemChromeMediumLowColor}"/>
        <SolidColorBrush x:Key="SidePanelBorderBrush" Color="{ThemeResource SystemChromeMediumColor}"/>
        <x:Double x:Key="SidePanelExpandedWidth">250</x:Double>
        <x:Double x:Key="SidePanelCollapsedWidth">48</x:Double>

        <Style x:Key="ToolCardStyle" TargetType="Grid">
            <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
            <Setter Property="Padding" Value="15"/>
        </Style>
        <Style x:Key="SidePanelButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>

        <DataTemplate x:Key="SearchResultItemTemplate" x:DataType="model:Tool">
            <Grid Padding="12" Background="Transparent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <FontIcon Grid.Column="0" 
                      Glyph="{x:Bind SymbolGlyph}" 
                      Margin="0,0,12,0"
                      VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="{x:Bind Name}" 
                           Style="{StaticResource BodyTextBlockStyle}"
                           FontWeight="SemiBold"/>
                    <TextBlock Text="{x:Bind Description}" 
                           Style="{StaticResource CaptionTextBlockStyle}"
                           TextTrimming="CharacterEllipsis"
                           Opacity="0.6"/>
                </StackPanel>
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="SidebarColumn" Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Side Panel -->
        <Border Grid.Column="0" 
            Background="{StaticResource SidePanelBackgroundBrush}"
            BorderBrush="{StaticResource SidePanelBorderBrush}"
            BorderThickness="0,0,1,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <Grid x:Name="SidePanel" 
                  Width="{StaticResource SidePanelExpandedWidth}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Logo and Header -->
                    <StackPanel Grid.Row="0" Margin="10">
                        <Image Source="/Assets/logo2.png" Width="80" Height="80" Stretch="Fill" HorizontalAlignment="Left"/>
                        <TextBlock x:Name="SidePanelHeaderText" Text="IT Tools" FontSize="18" FontWeight="SemiBold" Margin="5,10,0,10"/>
                    </StackPanel>

                    <!-- Tool Categories List - Improved styling -->
                    <ItemsRepeater Grid.Row="1" 
                               x:Name="ToolGroupsRepeater" 
                               ItemsSource="{x:Bind ViewModel.ToolGroups, Mode=OneWay}"
                               Margin="0,10,0,0">
                        <ItemsRepeater.ItemTemplate>
                            <DataTemplate x:DataType="model:ToolGroup">
                                <Expander HorizontalAlignment="Stretch" 
                                      Margin="5,2"
                                      Padding="5"
                                      Background="Transparent"
                                      IsExpanded="{x:Bind IsExpanded, Mode=TwoWay}">
                                    <Expander.Header>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{x:Bind Name}" />
                                        </StackPanel>
                                    </Expander.Header>
                                    <ListView ItemsSource="{x:Bind Tools}" 
                                          SelectionMode="Single"
                                          IsItemClickEnabled="True"
                                          ItemClick="SidebarToolItem_Click"
                                          Padding="0"
                                          BorderThickness="0"
                                          Background="Transparent">
                                        <ListView.ItemContainerStyle>
                                            <Style TargetType="ListViewItem">
                                                <Setter Property="Padding" Value="5"/>
                                                <Setter Property="Margin" Value="0,2"/>
                                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                            </Style>
                                        </ListView.ItemContainerStyle>
                                        <ListView.ItemTemplate>
                                            <DataTemplate x:DataType="model:Tool">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <FontIcon Grid.Column="0" 
                                                          Glyph="{x:Bind SymbolGlyph}" 
                                                          FontSize="14" 
                                                          Margin="0,0,8,0"/>

                                                    <TextBlock Grid.Column="1" 
                                                           Text="{x:Bind Name}" 
                                                           TextTrimming="CharacterEllipsis"
                                                           Visibility="{Binding DataContext.IsSidePanelExpanded, ElementName=ToolGroupsRepeater, Converter={StaticResource BoolToVisibilityConverter}}"/>

                                                    <FontIcon Grid.Column="2" 
                                                          Glyph="&#xEB29;" 
                                                          Visibility="{x:Bind IsPremium, Converter={StaticResource BoolToVisibilityConverter}}" 
                                                          Foreground="Gold"
                                                          FontSize="12"
                                                          Margin="4,0,0,0"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </Expander>
                            </DataTemplate>
                        </ItemsRepeater.ItemTemplate>
                    </ItemsRepeater>
                </Grid>
            </ScrollViewer>
        </Border>
        <!-- Main Content -->
        <Grid Grid.Column="1" Padding="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Enhanced Header -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Toggle Button for side panel -->
                <Button Grid.Column="0" 
                    x:Name="ToggleSidePanelButton"
                    Margin="0,0,12,0"
                    Click="ToggleSidePanel_Click"
                    Background="Transparent"
                    BorderBrush="Transparent">
                    <FontIcon x:Name="TogglePanelIcon" Glyph="&#xE76B;"/>
                </Button>

                <!-- Home Button -->
                <Button Grid.Column="1" 
                    x:Name="HomeButton"
                    Margin="0,0,12,0"
                    Click="HomeButton_Click"
                    Background="Transparent"
                    BorderBrush="Transparent">
                    <FontIcon Glyph="&#xE80F;"/>
                </Button>

                <!-- Search Bar with Suggestions -->
                <AutoSuggestBox Grid.Column="2"
                           x:Name="SearchBox" 
                           PlaceholderText="Search tools..." 
                           Text="{x:Bind ViewModel.SearchQuery, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           QueryIcon="Find"
                           TextChanged="SearchBox_TextChanged"
                           SuggestionChosen="SearchBox_SuggestionChosen"
                           QuerySubmitted="SearchBox_QuerySubmitted"
                           ItemTemplate="{StaticResource SearchResultItemTemplate}"/>

                <!-- Right Header Controls -->
                <StackPanel Grid.Column="3" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right">

                    <!-- Language Selector -->
                    <ComboBox x:Name="LanguageSelector"
                          Width="100"
                          Margin="5,0"
                          VerticalAlignment="Center"
                          SelectedIndex="0"
                          SelectionChanged="LanguageSelector_SelectionChanged">
                        <ComboBoxItem Content="English"/>
                        <ComboBoxItem Content="Spanish"/>
                        <ComboBoxItem Content="French"/>
                        <ComboBoxItem Content="German"/>
                    </ComboBox>

                    <!-- Theme Toggle -->
                    <ToggleButton x:Name="ThemeToggle"
                              Click="ThemeToggle_Click"
                              ToolTipService.ToolTip="Toggle Theme"
                              Background="Transparent"
                              BorderBrush="Transparent"
                              Margin="5,0">
                        <FontIcon x:Name="ThemeIcon" Glyph="&#xE793;"/>
                    </ToggleButton>

                    <!-- Info Button -->
                    <Button x:Name="InfoButton"
                        Click="InfoButton_Click"
                        ToolTipService.ToolTip="About"
                            Background="Transparent"
                            BorderBrush="Transparent">
                        <FontIcon Glyph="&#xE946;"/>
                    </Button>

                    <!-- GitHub Link -->
                    <HyperlinkButton x:Name="GitHubLink"
                                 NavigateUri="https://github.com/yourusername/ittools"
                                 ToolTipService.ToolTip="GitHub Repository"
                                     Background="Transparent"
                                    BorderBrush="Transparent">
                        <Image Grid.Row="0" Source="/Assets/github.svg" Width="20" Height="20" VerticalAlignment="Center"/>
                    </HyperlinkButton>

                    <!-- Anonymous UI -->
                    <StackPanel x:Name="AnonymousUI" 
                            Orientation="Horizontal" 
                            Visibility="{x:Bind ViewModel.IsAuthenticated, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                        <Button x:Name="LoginButton" Content="Login" Margin="5,0" Click="LoginButton_Click"/>
                        <Button x:Name="RegisterButton" Content="Register" Margin="5,0" Click="RegisterButton_Click"/>
                    </StackPanel>

                    <!-- User UI -->
                    <StackPanel x:Name="UserUI" 
                            Orientation="Horizontal" 
                            Visibility="{x:Bind ViewModel.IsAuthenticated, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                        <TextBlock Text="{x:Bind ViewModel.CurrentUser.Name, Mode=OneWay}" 
                               VerticalAlignment="Center" 
                               Margin="0,0,10,0"/>
                        <Button x:Name="FavoritesButton" 
                            ToolTipService.ToolTip="My Favorites" 
                            Margin="5,0" 
                            Click="FavoritesButton_Click"
                            Background="Transparent"
                            BorderBrush="Transparent">
                            <FontIcon x:Name="FavoriteIcon" Glyph="&#xE00B;"/>
                        </Button>
                        <Button x:Name="RequestPremiumButton" 
                            ToolTipService.ToolTip="Get Premium"
                            Margin="5,0" 
                            Command="{x:Bind ViewModel.RequestPremiumCommand}"
                            Visibility="{x:Bind ViewModel.IsPremium, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                            <Button.Content>
                                <Image Source="/Assets/premium.svg" Width="120" Height="120" VerticalAlignment="Center"/>
                            </Button.Content>
                        </Button>
                        <Button x:Name="LogoutButton" 
                            Command="{x:Bind ViewModel.LogoutCommand}" 
                            ToolTipService.ToolTip="Logout"
                            Margin="5,0"
                            Background="Transparent"
                            BorderBrush="Transparent">
                            <FontIcon Glyph="&#xE7E8;"/>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Grid>

            <!-- Error Message -->
            <TextBlock Grid.Row="1" 
                   Text="{x:Bind ViewModel.ErrorMessage, Mode=OneWay}" 
                   Foreground="Red" 
                   TextWrapping="Wrap" 
                   Margin="0,0,0,10"
                   Visibility="{x:Bind ViewModel.ErrorMessage, Mode=OneWay, Converter={StaticResource StringToVisibilityConverter}}"/>

            <!-- Main Tool Grid -->
            <Grid Visibility="{x:Bind ViewModel.IsContentFrameVisible, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Error Message -->
                <TextBlock Grid.Row="0" 
                           Text="{x:Bind ViewModel.ErrorMessage, Mode=OneWay}" 
                           Foreground="Red" 
                           TextWrapping="Wrap" 
                           Padding="20,10"
                           Visibility="{x:Bind ViewModel.ErrorMessage, Mode=OneWay, Converter={StaticResource StringToVisibilityConverter}}"/>

                <!-- Tools Grid -->
                <Grid Grid.Row="1" Padding="20">
                    <GridView ItemsSource="{x:Bind ViewModel.FilteredTools, Mode=OneWay}" 
                              SelectedItem="{x:Bind ViewModel.SelectedTool, Mode=TwoWay}"
                              SelectionMode="Single"
                              IsItemClickEnabled="True"
                              ItemClick="ToolsGridView_ItemClick">
                        <!-- ItemTemplate stays the same -->
                        <GridView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <ItemsWrapGrid Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </GridView.ItemsPanel>
                    </GridView>

                    <!-- Loading Indicator -->
                    <ProgressRing IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}" 
                                  Width="50" 
                                  Height="50" 
                                  HorizontalAlignment="Center" 
                                  VerticalAlignment="Center"/>

                    <!-- No Results Message -->
                    <TextBlock Text="No tools found matching your criteria." 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               Visibility="{x:Bind ViewModel.FilteredTools.Count, Mode=OneWay, Converter={StaticResource EmptyCollectionToVisibilityConverter}}"/>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>