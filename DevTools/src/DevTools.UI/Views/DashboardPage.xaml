<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="DevTools.UI.Views.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DevTools.UI.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:DevTools.UI.Models"
    mc:Ignorable="d"
    Background="{StaticResource BackgroundBrush}">

    <Page.Resources>
        <DataTemplate x:Key="ToolItemTemplate" x:DataType="models:Tool">
            <Grid Background="{StaticResource SurfaceBrush}" 
                  CornerRadius="12" 
                  Width="280" 
                  Height="220"
                  Padding="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="{x:Bind Name}" 
                               Style="{StaticResource SubheadingStyle}" 
                               Grid.Column="0"/>

                    <Border Grid.Column="1" 
                            Background="#33826AF9" 
                            CornerRadius="6" 
                            Padding="8,4" 
                            Visibility="{x:Bind IsPremium}">
                        <TextBlock Text="Premium" 
                                   Foreground="{StaticResource PrimaryBrush}" 
                                   FontSize="12" 
                                   FontWeight="SemiBold"/>
                    </Border>
                </Grid>

                <TextBlock Text="{x:Bind Description}" 
                           Style="{StaticResource BodyTextStyle}" 
                           Grid.Row="1" 
                           Margin="0,16,0,0"/>
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <ScrollViewer>
        <Grid Padding="0,12,0,24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Welcome Section -->
            <Grid Grid.Row="0" 
                  Background="{StaticResource SurfaceBrush}" 
                  CornerRadius="16" 
                  Padding="24" 
                  Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Welcome to DevTools" 
                               Style="{StaticResource HeadingStyle}" 
                               FontSize="28"/>
                    <TextBlock Text="Discover and use powerful developer tools to improve your workflow" 
                               Style="{StaticResource BodyTextStyle}" 
                               Margin="0,8,0,16"/>
                </StackPanel>
            </Grid>

            <!-- Search Box -->
            <Grid Grid.Row="1" Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0" 
                         PlaceholderText="Search for tools..." 
                         Background="{StaticResource SurfaceBrush}" 
                         Foreground="{StaticResource TextPrimaryBrush}" 
                         BorderThickness="0" 
                         Padding="16" 
                         CornerRadius="8"/>

                <Button Grid.Column="1" 
                        Background="{StaticResource PrimaryBrush}" 
                        Margin="12,0,0,0" 
                        Width="48" 
                        Height="40" 
                        CornerRadius="8">
                    <FontIcon FontFamily="Segoe MDL2 Assets" 
                              Glyph="&#xE721;" 
                              Foreground="White"/>
                </Button>
            </Grid>

            <!-- Tool List -->
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Available Tools" 
                           Style="{StaticResource SubheadingStyle}" 
                           Grid.Row="0" 
                           Margin="0,0,0,16"/>

                <GridView ItemsSource="{Binding Tools}" 
                          Grid.Row="1" 
                          ItemTemplate="{StaticResource ToolItemTemplate}" 
                          IsItemClickEnabled="True" 
                          ItemClick="ToolItem_Click"
                          SelectionMode="None">
                    <GridView.ItemContainerStyle>
                        <Style TargetType="GridViewItem">
                            <Setter Property="Margin" Value="0,0,20,20"/>
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                        </Style>
                    </GridView.ItemContainerStyle>
                </GridView>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>