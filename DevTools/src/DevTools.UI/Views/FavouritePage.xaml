<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="DevTools.UI.Views.FavouritePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DevTools.UI.Views"
    xmlns:models="using:DevTools.UI.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.DataContext>
        <Binding Path="FavouriteViewModel" Source="{StaticResource Locator}"/>
    </Page.DataContext>

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Your Favorite Tools" 
                   Style="{StaticResource SubtitleTextBlockStyle}"
                   Margin="0,0,0,20"/>

        <GridView Grid.Row="1" 
          ItemsSource="{Binding FavouriteTools}"
          SelectionMode="Single"
          ItemClick="ToolItem_Click"
          IsItemClickEnabled="True">
            <GridView.ItemTemplate>
                <DataTemplate x:DataType="models:Tool">
                    <Grid Width="200" Height="150" Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="{x:Bind Name}" 
                           FontWeight="SemiBold" 
                           FontSize="16"
                           TextWrapping="Wrap"/>

                        <TextBlock Grid.Row="1"
                           Text="{x:Bind Description}" 
                           TextWrapping="Wrap"
                           Opacity="0.7"
                           Margin="0,5"/>

                        <StackPanel Grid.Row="2" 
                            Orientation="Horizontal">
                            <FontIcon Glyph="&#xE1CF;" 
                              Visibility="{x:Bind IsPremium}"/>
                            <TextBlock Text="Premium" 
                               Visibility="{x:Bind IsPremium}"
                               Foreground="Gold"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>

        <!-- Add a separate control to handle the empty state -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center"
            Visibility="{Binding FavouriteTools.Count, Converter={StaticResource EmptyCollectionToVisibilityConverter}}">
            <TextBlock Text="You haven't added any favorites yet" 
               Style="{StaticResource SubtitleTextBlockStyle}"
               TextAlignment="Center"/>
            <TextBlock Text="Browse the dashboard and add tools to your favorites"
               TextAlignment="Center"
               Opacity="0.7"
               Margin="0,10"/>
        </StackPanel>
    </Grid>
</Page>