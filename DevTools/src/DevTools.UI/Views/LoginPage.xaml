<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="DevTools.UI.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DevTools.UI.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{StaticResource BackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Login Card -->
        <Grid Grid.Row="1" 
              HorizontalAlignment="Center" 
              VerticalAlignment="Center" 
              MaxWidth="440">
            <Grid Background="{StaticResource SurfaceBrush}" 
                  CornerRadius="16" 
                  Padding="40">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" 
                            HorizontalAlignment="Center" 
                            Margin="0,0,0,24">
                    <Ellipse Width="60" 
                             Height="60" 
                             Fill="{StaticResource BackgroundBrush}" 
                             Stroke="{StaticResource PrimaryBrush}" 
                             StrokeThickness="2" 
                             Margin="0,0,0,16"/>
                    <TextBlock Text="Welcome Back" 
                               Style="{StaticResource HeadingStyle}" 
                               FontSize="28" 
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Sign in to continue" 
                               Style="{StaticResource BodyTextStyle}" 
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Error Message -->
                <TextBlock x:Name="ErrorMessage" 
                           Grid.Row="1" 
                           Foreground="{StaticResource ErrorBrush}" 
                           TextWrapping="Wrap" 
                           Margin="0,0,0,16" 
                           Visibility="Collapsed"/>

                <!-- Username Field -->
                <StackPanel Grid.Row="2" Margin="0,0,0,16">
                    <TextBlock Text="Username" 
                               Foreground="{StaticResource TextSecondaryBrush}" 
                               Margin="0,0,0,8"/>
                    <TextBox Text="{Binding Username, Mode=TwoWay}" 
                             Background="#1F1F26" 
                             BorderThickness="0" 
                             Padding="16,12" 
                             CornerRadius="8" 
                             PlaceholderText="Enter your username"/>
                </StackPanel>

                <!-- Password Field -->
                <StackPanel Grid.Row="3" Margin="0,0,0,24">
                    <TextBlock Text="Password" 
                               Foreground="{StaticResource TextSecondaryBrush}" 
                               Margin="0,0,0,8"/>
                    <PasswordBox Password="{Binding Password, Mode=TwoWay}" 
                                 Background="#1F1F26" 
                                 BorderThickness="0" 
                                 Padding="16,12" 
                                 CornerRadius="8" 
                                 PlaceholderText="Enter your password"/>
                </StackPanel>

                <!-- Login Button -->
                <Button Grid.Row="4" 
                        Content="Sign In" 
                        Style="{StaticResource DefaultButtonStyle}" 
                        HorizontalAlignment="Stretch" 
                        Padding="0,12" 
                        Click="Login_Click"/>
            </Grid>
        </Grid>
    </Grid>
</Page>