<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="DevTools.UI.Views.ShellPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DevTools.UI.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{StaticResource BackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top App Bar -->
        <Grid Grid.Row="0" 
              Background="{StaticResource SurfaceBrush}" 
              Height="60" 
              Padding="20,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- App Logo -->
            <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center">
                <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE713;" 
                          Foreground="{StaticResource PrimaryBrush}" 
                          FontSize="24" 
                          Margin="0,0,12,0"/>
                <TextBlock Text="DevTools" 
                           Foreground="{StaticResource TextPrimaryBrush}" 
                           FontSize="18" 
                           FontWeight="SemiBold" 
                           VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Header Text -->
            <TextBlock x:Name="HeaderText" 
                       Grid.Column="1" 
                       Style="{StaticResource SubheadingStyle}" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"/>

            <!-- Action Buttons -->
            <StackPanel Orientation="Horizontal" 
                        Grid.Column="2" 
                        Spacing="12" 
                        VerticalAlignment="Center">
                <Button x:Name="LoginButton" 
                        Content="Login" 
                        Style="{StaticResource SecondaryButtonStyle}" 
                        Click="LoginButton_Click"/>
                <Button x:Name="LogoutButton" 
                        Content="Logout" 
                        Style="{StaticResource SecondaryButtonStyle}" 
                        Click="LogoutButton_Click" 
                        Visibility="Collapsed"/>
                <Button x:Name="UpgradeButton" 
                        Content="Upgrade to Premium" 
                        Style="{StaticResource DefaultButtonStyle}" 
                        Click="UpgradeButton_Click" 
                        Visibility="Collapsed"/>
            </StackPanel>
        </Grid>

        <!-- Main Content with Navigation -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Navigation Panel -->
            <Grid Grid.Column="0" 
                  Background="{StaticResource SurfaceBrush}" 
                  Padding="12,20">
                <ListView x:Name="NavList" 
                          SelectionMode="Single" 
                          SelectionChanged="NavList_SelectionChanged" 
                          Background="Transparent" 
                          BorderThickness="0">
                    <ListViewItem Tag="dashboard">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <FontIcon FontFamily="Segoe MDL2 Assets" 
                                      Glyph="&#xE80F;" 
                                      Foreground="{StaticResource PrimaryBrush}"/>
                            <TextBlock Text="Dashboard" 
                                       Foreground="{StaticResource TextPrimaryBrush}" 
                                       FontSize="14" 
                                       FontWeight="SemiBold"/>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem Tag="favorites">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <FontIcon FontFamily="Segoe MDL2 Assets" 
                                      Glyph="&#xE735;" 
                                      Foreground="{StaticResource TextSecondaryBrush}"/>
                            <TextBlock Text="Favorites" 
                                      Foreground="{StaticResource TextSecondaryBrush}" 
                                      FontSize="14"/>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem x:Name="AdminItem" 
                                  Tag="admin" 
                                  Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <FontIcon FontFamily="Segoe MDL2 Assets" 
                                      Glyph="&#xE7EF;" 
                                      Foreground="{StaticResource TextSecondaryBrush}"/>
                            <TextBlock Text="Admin Dashboard" 
                                       Foreground="{StaticResource TextSecondaryBrush}" 
                                       FontSize="14"/>
                        </StackPanel>
                    </ListViewItem>
                </ListView>
            </Grid>

            <!-- Content Frame -->
            <Frame x:Name="ContentFrame" 
                   Grid.Column="1" 
                   Padding="24" 
                   Background="{StaticResource BackgroundBrush}"/>
        </Grid>
    </Grid>
</Page>
