<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="DevTools.UI.Views.UpgradePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DevTools.UI.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20">
        <StackPanel MaxWidth="600" HorizontalAlignment="Center">
            <TextBlock Text="Upgrade to Premium" 
                       Style="{StaticResource TitleTextBlockStyle}"
                       Margin="0,0,0,20"/>

            <Grid Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                  Padding="20" 
                  CornerRadius="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Premium Features" 
                           Style="{StaticResource SubtitleTextBlockStyle}"
                           Margin="0,0,0,10"/>

                <StackPanel Grid.Row="1" Spacing="8" Margin="0,0,0,20">
                    <StackPanel Orientation="Horizontal">
                        <FontIcon Glyph="&#xE73E;" Margin="0,0,10,0"/>
                        <TextBlock Text="Access to all premium tools"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <FontIcon Glyph="&#xE73E;" Margin="0,0,10,0"/>
                        <TextBlock Text="Priority customer support"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <FontIcon Glyph="&#xE73E;" Margin="0,0,10,0"/>
                        <TextBlock Text="Early access to new features"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Row="2" Spacing="10">
                    <TextBlock Text="Select your plan" FontWeight="SemiBold"/>

                    <RadioButton Content="Monthly - $9.99/month" GroupName="PlanOptions"/>
                    <RadioButton Content="Annual - $99.99/year (Save 16%)" GroupName="PlanOptions" IsChecked="True"/>

                    <Button Content="Subscribe Now" 
                            Click="Subscribe_Click"
                            HorizontalAlignment="Stretch"
                            Margin="0,20,0,0"/>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
</Page>